<p id="notice"><%= notice %></p>
<div class = "content_area">

<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= image_tag favorite.image.url, class: 'picture' %></td>
        <td><%= favorite.content %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>


